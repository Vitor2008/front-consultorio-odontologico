{
    "extends": "./tsconfig.json", // Herda as configurações principais
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",        // ESSENCIAL: Onde colocar os arquivos .js
        "sourceMap": false,
        "noEmit": false,
        "esModuleInterop": true 
    }, 
  "include": ["src/server.ts", "src/controllers", "src/Services"], // Inclua aqui todos os arquivos/pastas do seu backend
  "exclude": ["src/Components", "src/Pages", "src/App.tsx", "src/main.tsx"] // Exclua os arquivos do frontend
}